<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <!--Background-->
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#454545" />
                </shape>
            </item>

            <!--Foreground-->
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270" android:startColor="#E6E6E6" android:centerColor="#E6E6E6" android:endColor="#9A9A9A"/>
                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="2dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <!--Background-->
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#454545" />
                </shape>
            </item>

            <!--Foreground-->
            <item android:bottom="2dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:startColor="#989898" android:centerColor="#888888" android:endColor="#737373"/>

                    <stroke android:width="1dp" android:color="#BABABA" />
                    <corners android:radius="2dp" />
                    <padding android:bottom="10dp" android:left="10dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>